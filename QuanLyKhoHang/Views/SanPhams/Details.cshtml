@model QuanLyKhoHang.Models.SanPham

@{
    ViewData["Title"] = "Details";
}

<h1>Chi tiết sản phẩm</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenSp)
        </dd>
        <dt class = "col-sm-2">
            Số lượng tồn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Slton)
        </dd>
        <dt class = "col-sm-2">
            Ngày nhập hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>
        <dt class = "col-sm-2">
            Danh mục
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IddmNavigation.MaDm)
        </dd>
        <dt class = "col-sm-2">
            Hãng sản xuất
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdhxxNavigation.MaNxx)
        </dd>
        <dt class = "col-sm-2">
            Kho hàng 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdkhoNavigation.MaKho)
        </dd>
        <dt class = "col-sm-2">
            Nhà phân phối
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdnppNavigation.MaNpp)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MaSp">Edit</a> |
